<config>
    <modules>
        <Symcode_PageLinks>
            <version>1.0.0.0</version>
        </Symcode_PageLinks>
    </modules>
    <global>
        <models>
            <pageLinks>
                <class>Symcode_PageLinks_Model</class>
				<resourceModel>pageLinks_mysql4</resourceModel>
            </pageLinks>
			<pageLinks_mysql4>
				<class>Symcode_PageLinks_Model_Mysql4</class>
				<entities>
					<cms_pageLink>
						<table>cms_pagelink</table>
					</cms_pageLink>
				</entities>
			</pageLinks_mysql4>
        </models>
		<resources>
			<cms_pageLink_write>
					<connection><use>core_write</use></connection>
			</cms_pageLink_write>
			<cms_pageLink_read>
					<connection><use>core_read</use></connection>
			</cms_pageLink_read>
			<pagelinks_setup>
				<setup>
					<module>Symcode_PageLinks</module>
					<class>Symcode_PageLinks_Model_Resource_Setup</class>
				</setup>
			</pagelinks_setup>
		</resources>
        <helpers>
            <pageLinks>
                <class>Symcode_PageLinks_Helper</class>
            </pageLinks>
        </helpers>
        <blocks>
            <pageLinks><class>Symcode_PageLinks_Block</class></pageLinks>
        </blocks>
		<events>
			<core_block_abstract_to_html_before>
				<observers>
					<top_links>
						<model>pageLinks/observer</model>
						<method>addTemplateLinks</method>
					</top_links>
				</observers>
			</core_block_abstract_to_html_before>
			<page_block_html_topmenu_gethtml_before>
				<observers>
					<top_links>
						<model>pageLinks/observer</model>
						<method>addMenuLinks</method>
					</top_links>
				</observers>
			</page_block_html_topmenu_gethtml_before>
		</events>
    </global>
	<adminhtml>
        <translate>
            <modules>
                <Symcode_PageLinks>
                    <files>
                        <default>Symcode_PageLinks.csv</default>
                    </files>
                </Symcode_PageLinks>
            </modules>
        </translate>
		<events>
			<adminhtml_cms_page_edit_tab_main_prepare_form>
				<observers>
					<form_page_links>
						<model>pageLinks/observer</model>
						<method>addShowLinkElement</method>
					</form_page_links>
				</observers>
			</adminhtml_cms_page_edit_tab_main_prepare_form>
			<cms_page_save_after>
				<observers>
					<save_pagelink>
						<model>pageLinks/observer</model>
						<method>savePageLink</method>
					</save_pagelink>
				</observers>
			</cms_page_save_after>
		</events>
	</adminhtml>
</config>